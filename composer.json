{
    "name": "tainix/aoc-php-2023",
    "description": "Resolution des challenges Advent Of Code 2023",
    "type": "project",
    "require": {
        "php": ">=8.1",
        "pestphp/pest": "2.*",
        "phpstan/phpstan": "1.*",
        "illuminate/collections": "*",
        "larapack/dd": "1.*"
    },
    "autoload": {
        "files": ["Reader.php", "Utils.php"],
        "psr-4" : {
            "Solutions\\" : "solutions/"
        }
    },
    "scripts": {
        "day": [
            "php newday.php"
        ],
        "test": [
            ".\\vendor\\bin\\pest"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
